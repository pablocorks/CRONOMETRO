{
  "manifest_version": 3,
  "name": "Cronômetro Flutuante",
  "version": "1.0",
  "description": "Um cronômetro sempre visível, flutuante e personalizável.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"]
}
